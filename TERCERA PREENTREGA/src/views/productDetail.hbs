<div class="app-content detail-container container">
    {{#if product}}
        <div class="card">
            <div class="card-detail">
                {{#if product.thumbnail}}
                    <img class="img-card-detail card-img" src="/assets/imgProducts/{{product.thumbnail}}" alt="{{product.title}}">
                {{/if}}
                <div class="body-card-detail">
                    <h1 class="title-card-detail card-title">{{product.title}}</h1>
                    <p class="text-card-detail card-text">${{product.price}}</p>
                    <p class="category-card-detail card-text" data-category="{{product.category}}">
                        {{product.category}}
                    </p>
                    <p class="stock-card-detail">{{product.stock}} aviable</p>
                    <div class="d-flex flex-row">
                        <div class="count-container">
                            <button class="count-product-detail btn-count">-</button>
                            <span class="count-quantity-product-detail count-content">1</span>
                            <button class="count-product-detail btn-count">+</button>
                        </div>
                        <button class="btn-add-to-cart btn btn-primary" data-product-id="{{product._id}}" data-product-title="{{product.title}}" data-cart-id="{{userInfoDto.cart}}" data-user-role="{{userInfoDto.role}}">Add to cart</button>     
                    </div>
                </div>
            </div>
            <div>
                <h6 class="subtitle-card-detail card-subtitle">Ingredients</h2>
                <ul class="info-card-detail">
                    {{#each product.description}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    {{else}}
        <h1 class="title-category">Product could not be loaded</h1>
    {{/if}}
</div>
 
<script type="module" src="/js/main.js"></script>
<script type="module" src="/js/productDetail.js"></script>