<!-- Form to add products -->
<h2>ADD PRODUCTS</h2>
<form id="addProductForm" enctype="multipart/form-data" class="mt-5 mx-5 pt-3 px-5">
    <label for="title">Title</label>
    <input type="text" name="title" placeholder="Título">
    <br>
    <label for="description">Description (Separate ingredients with commas ",")</label>
    <input type="text" name="description" placeholder="Ingredientes">
    <br>
    <label for="code">Code</label>
    <input type="text" name="code" placeholder="Código">
    <br>
    <label for="price">Price</label>
    <input type="number" name="price" placeholder="Precio">
    <br>
    <label for="stock">Stock</label>
    <input type="number" name="stock" placeholder="Stock">
    <br>
    <label for="category">Category</label>
    <select name="category">
        <option value="vegano">vegan</option>
        <option value="vegetariano">vegetarian</option>
    </select>
    <br>
    <label for="thumbnail">Imagen (DOES NOT WORK)</label>
    <input type="file" name="thumbnail">
    <br>
    <button ontype="submit">ADD</button>
</form>

<!-- Products -->
<div id="cardProductsContainer" class="app-content container"></div>

<script src="/socket.io/socket.io.js"></script>
<script type="module" src="/js/realTimeProducts.js"></script>